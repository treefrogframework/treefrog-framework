# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 4

[*.{h,cpp}]
trim_trailing_whitespace = true
insert_final_newline = true

[*.pro]
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{html,htm}]
trim_trailing_whitespace = false 
insert_final_newline = false

[*.ini]
end_of_line = crlf

[*.bat]
end_of_line = crlf

